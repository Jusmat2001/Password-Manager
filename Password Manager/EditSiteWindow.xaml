<Window x:Class="Password_Manager.EditSiteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Password_Manager"
        mc:Ignorable="d"
        Title="Edit Site Window" Height="269.492" Width="300" Background="#FFCBD059">
    <Grid>
        <ComboBox x:Name="EditSiteNameBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="191"/>
        <ComboBox x:Name="EditSitePracticeBox" HorizontalAlignment="Left" Margin="227,10,0,0" VerticalAlignment="Top" Width="57"/>
        <TextBox x:Name="EditSiteIdBox" HorizontalAlignment="Left" Height="23" Margin="10,37,0,0" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Width="128"/>
        <TextBox x:Name="EditSitePassBox" HorizontalAlignment="Left" Height="23" Margin="143,37,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="141"/>
        <TextBox x:Name="EditSiteUrlBox" HorizontalAlignment="Left" Height="23" Margin="10,65,0,0" TextWrapping="Wrap" Text="Website" VerticalAlignment="Top" Width="274"/>
        <TextBox x:Name="EditSiteNotesBox" HorizontalAlignment="Left" Height="129" Margin="9,93,0,0" TextWrapping="Wrap" Text="Notes" VerticalAlignment="Top" Width="274"/>

    </Grid>
</Window>
