<Window x:Class="Password_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Password_Manager"
        mc:Ignorable="d"
        Title="CodeOne Password Manager" Height="217.6" Width="500" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}"  BorderBrush="{DynamicResource {x:Static SystemColors.InactiveBorderBrushKey}}" UseLayoutRounding="True" Loaded="Window_Loaded" Closing="Window_Closing" >
    <Grid>
        <DockPanel Margin="0,0,-0.4,163.6">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Version" x:Name="VersionMenuItem" Click="VersionMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="_Edit" >
                    <MenuItem x:Name="AddASiteMenuItem" Header="_Add a Site" Click="AddASiteMenuItem_Click" />
                    <MenuItem x:Name="EditASiteMenuItem" Header="_Edit a Site"/>
                    <MenuItem x:Name="DeleteASiteMenuItem" Header="_Delete a Site"/>
                </MenuItem>
                
            </Menu>
        </DockPanel>
        

        <Button x:Name="IdCopyBtn" Content="Copy" Height="23" VerticalAlignment="Top" Margin="124,113,325.6,0" ToolTip="Copies Site Id to Clipboard. Ctrl+V to paste." Click="IdCopyBtn_Click"/>
        <Button x:Name="PassCopyBtn" Content="Copy" Height="23" VerticalAlignment="Top" ToolTip="Copies Site Password to Clipboard. Ctrl+V to paste." Margin="298,113,151.6,0" Click="PassCopyBtn_Click"/>
        <Button x:Name="modeSwitchBtn" Content="Switch Mode" HorizontalAlignment="Left" Height="37" Margin="380,26,0,0" VerticalAlignment="Top" Width="104" Click="modeSwitchBtn_Click" FontSize="16" FontWeight="Bold"/>
        <TextBlock x:Name="userDecBlock" HorizontalAlignment="Left" Height="11" Margin="380,113,0,0" TextWrapping="Wrap" Text="{Binding User}" VerticalAlignment="Top" Width="77" FontWeight="Bold" TextDecorations="Underline" FontSize="10" Foreground="#FFA51616" RenderTransformOrigin="0.483,1.217"/>
        <TextBlock HorizontalAlignment="Left" Height="11" Margin="380,97,0,0" TextWrapping="Wrap" Text="Current User:" VerticalAlignment="Top" Width="67" FontSize="10" TextDecorations="Underline" FontWeight="Bold"/>
        <ComboBox x:Name="siteNameBox" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Width="178" Text="Choose a website..." IsEditable="True" IsEnabled="True" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
        <ComboBox x:Name="practiceBox" HorizontalAlignment="Left" Margin="211,26,0,0" VerticalAlignment="Top" Width="66" Text="Practice" IsEditable="True" IsEnabled="True" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
        <TextBox x:Name="IdTextBox" HorizontalAlignment="Left" Height="23" Margin="10,113,0,0" TextWrapping="Wrap" Text="Site Id" VerticalAlignment="Top" Width="109"/>
        <RichTextBox x:Name="UrlBox" HorizontalAlignment="Left" Height="23" Margin="10,69,0,0" VerticalAlignment="Top" Width="332" RenderTransformOrigin="0.514,-0.687" IsDocumentEnabled="True" IsReadOnly="True">
            <FlowDocument>
                <Paragraph>
                    <Run Text= "Site URL"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="PassTextBox" HorizontalAlignment="Left" Height="23" Margin="193,113,0,0" TextWrapping="Wrap" Text="Site Password" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="noteBox" HorizontalAlignment="Left" Height="39" Margin="10,141,0,0" TextWrapping="Wrap" Text="Remember to update Password Manager if you change any login info online." VerticalAlignment="Top" Width="474" Foreground="#FFC01B1B" Background="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}" Padding="2"/>

    </Grid>
</Window>
